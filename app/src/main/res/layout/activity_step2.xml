<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Step 2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breaking News 1"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>
    
    <EditText
        android:id="@+id/brn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@drawable/btn_edt"
        android:textColor="@color/black"
        android:elevation="25dp"
        android:maxLength="85"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breaking News 2"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/brn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@drawable/btn_edt"
        android:textColor="@color/black"
        android:elevation="25dp"
        android:maxLines="1"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breaking News 2 Scrolling (English)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <Switch
                    android:layout_alignParentEnd="true"
                    android:theme="@style/SwitchCompatTheme"
                    android:background="@color/gry"
                    android:id="@+id/br2scroll"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breaking News 1 Scrolling"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Switch
                android:layout_alignParentEnd="true"
                android:theme="@style/SwitchCompatTheme"
                android:background="@color/gry"
                android:id="@+id/br2scroll1"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breaking News 2 Scrolling"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <Switch
                    android:layout_alignParentEnd="true"
                    android:theme="@style/SwitchCompatTheme"
                    android:background="@color/gry"
                    android:id="@+id/br2scroll2"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Theme"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnprev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_step2"
            android:text="@string/prev"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold">
        </Button>
        <TextView
            android:id="@+id/styleid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/style_1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"/>
        <Button

            android:id="@+id/btnnext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_step2"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold">
        </Button>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mobile1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/mobile2"
        android:padding="12dp">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/news_style"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:foregroundGravity="center"/>
        <TextView
            android:id="@+id/news1_text"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingBottom="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/news2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_below="@+id/news1_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/mobile2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/mobile2"
                android:padding="12dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city_namemob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2.5"
                    android:id="@+id/news1_text2"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:paddingStart="2dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:paddingBottom="1dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/bottombar"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:id="@+id/news_style2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:foregroundGravity="center"/>
                    <TextView
                        android:id="@+id/placeholdertext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:paddingBottom="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"/>
                    <TextView
                        android:paddingStart="5dp"
                        android:id="@+id/news2_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_below="@+id/placeholdertext2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>
            </RelativeLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Process Video"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
