                     android:background="@xml/edt_text_gray_border"
                     android:fontFamily="@font/poppins_light"
                     android:hint="Enter Passowrd here"
                     android:inputType="textPassword"
                     android:maxLength="15"
                     android:paddingLeft="8dp"
                     android:textColor="#000000"
                     android:textSize="11dp" />


                 <EditText
                     android:id="@+id/et_confirm_pass"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_marginTop="15dp"
                     android:background="@xml/edt_text_gray_border"
                     android:fontFamily="@font/poppins_light"
                     android:hint="Enter Confirm Passowrd here"
                     android:inputType="textPassword"
                     android:maxLength="15"
                     android:paddingLeft="8dp"
                     android:textColor="#000000"
                     android:textSize="11dp" />

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <CheckBox
                         android:layout_marginTop="5dp"
                         android:id="@+id/check"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/colorPrimary"
                         android:fontFamily="@font/poppins_regular"
                         android:checked="true"/>

                     <TextView
                         android:id="@+id/open"
                         android:layout_marginTop="5dp"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:padding="5dp"
                         android:text="@string/accept_the_terms_and_conditions"
                         android:textColor="@color/colorPrimary"
                         android:fontFamily="@font/poppins_regular"/>

                 </LinearLayout>



                 <Button
                     android:id="@+id/Register"
                     android:layout_width="match_parent"
                     android:layout_height="38dp"
                     android:layout_marginTop="30dp"
                     android:background="@xml/btn_roundedfull"
                     android:fontFamily="@font/fff_tusj"
                     android:onClick="login"
                     android:text="Register"
                     android:textColor="#000000"
                     card_view:ignore="OnClick" />


                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="16dp"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/forgotpass"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/poppins_medium"
                         android:text="Forgot Password?"
                         android:textColor="#1ABC9C"
                         android:textSize="12sp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="5dp"
                         android:layout_toLeftOf="@+id/tv_login"
                         android:fontFamily="@font/poppins_regular"
                         android:gravity="right"
                         android:text="Already have Account?"
                         android:textColor="#ffffff"
                         android:textSize="12sp" />


                     <TextView
                         android:id="@+id/tv_login"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
