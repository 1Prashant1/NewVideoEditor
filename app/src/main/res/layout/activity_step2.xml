            </LinearLayout>


        </LinearLayout>
        </ScrollView>
    <RelativeLayout
        android:id="@+id/main_template"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="352dp"
        android:layout_height="240dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reptemp"
            android:layout_alignParentRight="true"
            android:layout_above="@id/newsstyle">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reporterphoto"
                />
            <TextView
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporterphoto"
                android:background="@color/white"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:id="@+id/reporter_name"
                android:paddingLeft="2dp"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/logoimage"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:background="@color/white"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            >
            <TextView
                android:id="@+id/city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/newsstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY">

                <HorizontalScrollView
                    android:id="@+id/bitmapnews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/bitmapnews2"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/news1text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:textColor="@color/white"
                        tools:ignore="RtlCompat"
                        />
                </HorizontalScrollView>


            <HorizontalScrollView
                android:id="@+id/bitmapnews2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textAlignment="textStart"
                    android:id="@+id/news2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />
            </HorizontalScrollView>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_template2"
        android:layout_width="352dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/reptemp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/newsstyle2"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/reporterphoto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reporter_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporterphoto2"
                android:background="@color/white"
                android:paddingLeft="2dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/city_name2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:textColor="@color/black">

                <TextView
                    android:id="@+id/city_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/news1layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@color/blue">

                <TextView
                    android:id="@+id/news1text2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="gravity"
                    android:textColor="@color/white" />
            </LinearLayout>
            <ImageView
                android:id="@+id/logoimage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/newsstyle2"
            android:layout_width="match_parent"
            android:background="@mipmap/breaking11"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY">

            <RelativeLayout
                android:id="@+id/bitmap2news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/news2text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="bottom"
                android:singleLine="true"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>





</LinearLayout>