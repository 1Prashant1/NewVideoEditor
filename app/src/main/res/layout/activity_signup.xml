<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:visibility="visible"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/secondlayout"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="15dp"
        android:background="@xml/btn_white"
        android:orientation="vertical"
        android:elevation="25dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Welcome to VIDEO NEWS MAKER"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/fff_tusj"/>

        <LinearLayout

            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:background="@xml/btn_white"
            android:orientation="vertical">

            <ImageView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon"/>


        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Please Keep the Internet Switched On!"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/fff_tusj"/>














    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainlayout"
        android:visibility="gone">

        <!--all page inside Relative layout-->


        <ImageView
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/icon"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fff_tusj"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="-20dp"
            android:padding="15dp"
            android:background="@drawable/btn_background"
            android:orientation="vertical">


            <TextView
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change"
                android:background="@color/black"
                android:layout_marginTop="-20dp"
                android:textSize="17sp"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="@color/Blue"/>






            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">





                <EditText
                    android:id="@+id/et_Firstname"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_edt"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Name"
                    android:textColorHint="@color/black"
                    android:inputType="textEmailAddress"
                    android:maxLength="40"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />






            </LinearLayout>


            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_edt"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/enter_email_here"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_edt"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/enter_phone_number"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:maxLength="40"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/et_map"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_edt"
                android:fontFamily="@font/poppins_light"
                android:hint="Location"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">





            </LinearLayout>



            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/btn_green"
                android:fontFamily="@font/product_sans_regular"
                android:text="Submit"
                android:textColor="#ffffff"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">






            </RelativeLayout>



        </LinearLayout>






